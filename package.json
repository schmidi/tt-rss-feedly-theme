{
  "name": "tt-rss-feedly-theme",
  "version": "2.0.0",
  "description": "Feedly theme for Tiny Tiny RSS",
  "main": "index.js",
  "repository": "git@github.com:levito/tt-rss-feedly-theme.git",
  "author": "Veit Lehmann",
  "license": "WTFPL",
  "private": true,
  "scripts": {
    "build-template": "lessc --source-map-inline src/$FILE.less > $FILE.css",
    "build-default": "FILE=feedly npm run build-template",
    "build-night": "FILE=feedly-night npm run build-template",
    "build": "npm run build-default & npm run build-night",
    "compress-template": "cleancss --inline none -o $FILE.css $FILE.css",
    "compress-default": "FILE=feedly npm run compress-template",
    "compress-night": "FILE=feedly-night npm run compress-template",
    "compress": "npm run compress-default & npm run compress-night",
    "start": "chokidar 'src/**/*.less' --initial -c 'npm run build'",
    "postinstall": "git submodule init && git submodule update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run compress && sleep 2"
    }
  },
  "dependencies": {
    "chokidar-cli": "1.2.1",
    "clean-css-cli": "4.2.1",
    "husky": "1.3.1",
    "less": "3.9.0"
  }
}
